<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/colorPrimary"
    android:paddingVertical="5dp"

    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />
    <ImageButton
        android:contentDescription="@string/cont_desc_camera"
        android:id="@+id/menu_camera_btn"
        android:layout_width="wrap_content"
        android:src="@drawable/camera"
        android:adjustViewBounds="true"
        android:background="@color/colorPrimary"
        android:scaleType="centerCrop"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"/>
    <ImageButton
        android:contentDescription="@string/cont_desc_folder"
        android:id="@+id/menu_folder_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/folder"
        android:adjustViewBounds="true"
        android:background="@color/colorPrimary"
        android:scaleType="centerCrop"
        android:layout_marginRight="20dp"
        />
    <ImageButton
        android:contentDescription="@string/cont_desc_grid"
        android:id="@+id/menu_style_btn"
        android:layout_width="wrap_content"
        android:src="@drawable/menu"
        android:adjustViewBounds="true"
        android:background="@color/colorPrimary"
        android:scaleType="centerCrop"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"/>

</LinearLayout>